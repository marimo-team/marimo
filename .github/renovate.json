{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:monthly"
  ],
  "labels": [
    "dependencies"
  ],
  "pin": {
    "enabled": false
  },
  "rangeStrategy": "bump",
  "postUpdateOptions": [
    "pnpmDedupe"
  ],
  "pre-commit": {
    "enabled": true
  },
  "pep621": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchCategories": [
        "python"
      ],
      "enabled": true,
      "matchPackageNames": [
        "/.*sphinx.*/",
        "/.*ruff.*/"
      ]
    },
    {
      "matchDepTypes": [
        "peerDependencies",
        "project.dependencies"
      ],
      "enabled": false
    },
    {
      "groupName": "pre-commit dependencies",
      "matchManagers": [
        "pre-commit"
      ],
      "description": "Weekly update of pre-commit dependencies"
    },
    {
      "matchPackageNames": [
        "node"
      ],
      "enabled": false
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "matchPackageNames": [
        "!/.*eslint.*/",
        "!/.*radix.*/",
        "!/.*storybook.*/",
        "!geopandas",
        "!typescript",
        "!react-resizable-panels",
        "!openapi-fetch"
      ]
    },
    {
      "groupName": "all radix dependencies",
      "groupSlug": "all-radix",
      "matchUpdateTypes": [
        "patch"
      ],
      "matchPackageNames": [
        "/.*radix.*/"
      ]
    },
    {
      "groupName": "all storybook dependencies",
      "groupSlug": "all-storybook",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "major"
      ],
      "matchPackageNames": [
        "/.*storybook.*/"
      ]
    },
    {
      "groupName": "all eslint dependencies",
      "groupSlug": "all-eslint",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "major"
      ],
      "matchPackageNames": [
        "/.*eslint.*/"
      ]
    }
  ]
}
